  \ let b:comment='\/\/'
  \ | let b:end_comment=''

au FileType rust
  \ let b:comment='\/\/'
  \ | let b:end_comment=''

au FileType c
  \ let b:comment = '\/\*'
  \ | let b:end_comment = '\*\/'

